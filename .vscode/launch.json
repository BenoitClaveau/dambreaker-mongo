{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceRoot}",
            "args": [
                "--color",
                "--recursive",
                "--grep",
                "user by city",
                "${workspaceRoot}/tests/**.spec.js"
            ],
            "preLaunchTask": "mongo",
            "skipFiles": [
                "<node_internals>/**/*.js",
                "${workspaceFolder}/node_modules/core-js/**/*.js"
            ]
        }
    ]
}